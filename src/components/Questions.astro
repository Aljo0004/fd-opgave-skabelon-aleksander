---
import faqData from "@data/faq.json";

console.log(faqData);
---

<section class="faq-list">
  {
    faqData.faq.map((item) => (
      <details class="faq-item">
        <summary>
          <span class="faq-question">{item.question}</span>
          <span class="faq-toggle" />
        </summary>
        <p class="faq-answer">{item.answer}</p>
      </details>
         <div class="line" />
    ))
  }
</section>

<style>
  .line {
    border: 0.5px solid var(--p-grey);
    width: 100%;
  }
  .faq-list {
  width: 80%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    text-align: left;
    gap: var(--space-s);
  }
  .faq-item {
    margin-bottom: var(--space-s);
  }
  .faq-toggle {
    display: inline-block;
    font-weight: bold;
    font-size: 1.5rem;
    width: var(--space-l);
    margin-right: 0.5rem;
    text-align: right;
  }
  .faq-item summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    font-size: 1.1rem;
    gap: 0.5rem;
  }
  .faq-question {
    flex: 1;
    text-align: left;
    font-weight: 600;
  }
  .faq-answer {
    margin-top: 0.5rem;
    width: 80%;
  }
  .faq-item summary .faq-toggle::after {
    content: "+";
    transition: content 0.2s;
  }
  .faq-item[open] summary .faq-toggle::after {
    content: "-";
  }
</style>
