---
import { Image } from "astro:assets";
import CEO from "@assets/images/ceo.png";
import Services from "@components/Services.astro";
import Pattern from "@assets/images/pattern.png";
---

<section class="full-bleed">
  <article>
    <div class="text-container">
      <div class="pattern-wrapper">
        <Image class="pattern" src={Pattern} alt="Pattern" />
      </div>
      <div class="text">
        <h1>Empowering Your Business Growth</h1>
        <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
        <a class="btn" href="#0">Book a Meeting</a>
      </div>
    </div>
    <Image class="hero-img bleed-right" src={CEO} alt="CEO" />
  </article>

  <!-- </div> -->
</section>
<Services class="services" />
<style>
  section > article {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: var(--bg-black);
    height: auto;
  }
  .text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .text-container {
    display: flex;
    flex-direction: row;
    position: relative;
  }

  .pattern-wrapper {
    position: relative;
    width: 200px;
    height: 100px;
    flex-shrink: 0;
    left: -7rem;
    top: var(--space-3xl);
  }

  p {
    color: var(--white);
  }

  .btn {
    display: inline-block;
    margin-top: var(--space-s);
    padding: 0.85rem 1.25rem;
    border-radius: 999px;
    background: var(--white);
    color: var(--bg-black);
    text-decoration: none;
  }

  .hero-img {
    grid-column: 2 / 3;
    object-fit: cover;
    width: 100%;
    height: auto;
    align-self: stretch;
  }
  h1 {
    color: var(--white);
    margin-bottom: var(--space-s);
  }

  @media (max-width: 800px) {
    section > article {
      display: flex;
      flex-direction: column;
      gap: var(--space-l);
    }
    .text-container {
      order: 1;
    }
    .hero-img {
      order: 2;
      width: 100%;
      margin-top: var(--space-m);
      align-self: center;
    }
  }
</style>
