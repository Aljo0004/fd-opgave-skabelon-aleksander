---
import Phone from "../icons/phone.svg";
import Clock from "../icons/clock.svg";
import Pin from "../icons/pin.svg";
import ProcessGrid from "./ProcessGrid.astro";
---

<article class="container">
  <div>
    <div class="text">
      <p>PROCESS</p>
      <h2>Contact Us. It's Easy.</h2>
      <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
    </div>
    <div class="info">
      <div class="call">
        <Phone />
        <div>
          <p>Call Today</p>
          <h3>+1 800 100 900</h3>
        </div>
      </div>

      <div class="clock">
        <Clock />
        <div>
          <p>Monday To Friday</p>
          <h3>9AM - 5PM</h3>
        </div>
      </div>

      <div class="adress">
        <Pin />
        <div>
          <p>USA Office</p>
          <h3>195 Devonshire St Boston, MA 02110</h3>
        </div>
      </div>
    </div>
  </div>

  <ProcessGrid />
</article>
<style>
  article {
    display: flex;
    flex-direction: row;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-2xl);
    flex: 1;
    justify-content: space-between;
    width: 80%;
    margin-inline: auto;
  }
  .text :first-child {
    margin-bottom: var(--space-l);
  }
  .text :nth-child(2) {
    margin-bottom: var(--space-l);
  }
  .info {
    margin-top: var(--space-s);
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: var(--space-l);
  }

  .call,
  .clock,
  .adress {
    display: flex;
    flex-direction: row;
    gap: var(--space-s);
  }
  svg {
    border-radius: 30px;
    width: 42px;
    height: 42px;
    padding: 10px;
  }

  .call svg {
    background-color: #ffecbb;
    color: #deaa27;
  }
  .clock svg {
    background-color: #a4eda4;
    color: #4eaf4e;
  }
  .adress svg {
    background-color: #eaeaea;
    color: var(--bg-black);
  }
    @media (max-width: 800px) {
      article {
        flex-direction: column;
        gap: var(--space-2xl);
        width: 90%;
      }
      .info {
        flex-direction: row;
        justify-content: space-between;
      }
    }
</style>
