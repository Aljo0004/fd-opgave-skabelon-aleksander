<button id="show-login">Login</button>
<div id="login-overlay" class="login-overlay" style="display: none;"></div>
<form class="login-form" id="login-form" style="display: none;">
  <h3>Dashboard Login</h3>
  <label>
    Email adress
    <input type="email" name="email" required />
  </label>
  <label>
    Password
    <input type="password" name="password" required />
  </label>
  <button type="submit">Go to dashboard</button>
</form>

<style>
  @layer component {
    button {
      display: flex;
      padding: 4px 16px;
      justify-content: center;
      align-items: center;
      gap: 10px;
      border-radius: 20px;
      background: var(--yellow);
    }

    .login-form {
      display: flex;
      flex-direction: column;
      gap: var(--space-s);
      max-width: 320px;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: var(--bg-black);
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
      border-radius: 16px;
      padding: var(--space-l);
      z-index: 1000;
    }
    .login-form label {
      display: flex;
      flex-direction: column;
      font-size: 1rem;
      color: var(--white);
    }
    .login-form input {
      padding: 8px 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 1rem;
      margin-top: 4px;
      background: white;
      color: black;
    }
    .login-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(8px);
      z-index: 999;
    }
    h3 {
      color: var(--white);
    }
  }
</style>
<script>
  document.getElementById("show-login").addEventListener("click", function () {
    document.getElementById("login-form").style.display = "flex";
    document.getElementById("login-overlay").style.display = "block";
    this.style.display = "none";
  });

  document.getElementById("login-overlay").addEventListener("click", function () {
    document.getElementById("login-form").style.display = "none";
    this.style.display = "none";
    document.getElementById("show-login").style.display = "flex";
  });
</script>
