<article class="container">
  <div>
    <h2>Subscribe Our Newsletter</h2>
    <p class="subtitle">Build stronger Customer Relationships with Consultalk</p>
  </div>
  <div>
    <form>
      <input type="email" id="email" name="email" placeholder="your email adress" />
    </form>
    <a href="#">Subscribe</a>
  </div>
</article>

<style>
  article {
    margin-top: var(--space-l);
    margin-bottom: var(--space-2xl);
    background-color: black;
    color: var(--white);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 22px;
    padding: var(--space-2xl);
    background-image: url("/src/assets/images/Pattern.png");
    background-size: 20%;
    background-repeat: no-repeat;
    background-position: right;
    width: 80%;
    margin-inline: auto;
    overflow: hidden;

    .subtitle {
      color: white;
    }

    div:nth-child(2) {
      display: flex;
      gap: var(--space-s);
      form {
        display: flex;
        align-items: center;

        input {
          background-color: white;
          width: 100%;
          padding: var(--space-xs) var(--space-xl);
          border-radius: 6px;
          border: none;
        }
      }

      a {
        align-self: center;
        border-radius: 2.625rem;
        background: #ffcc4a;
        padding: var(--space-xs) var(--space-l);
        text-decoration: none;
        color: black;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          top: var(--space-2xl);
          left: var(--space-xl);
          background: var(--green);
          border-radius: 30px;
          width: 150px;
          aspect-ratio: 1/1;
          z-index: 1;
          transform: translate(50%, 0) rotate(45deg);
        }
      }
    }
  }
   @media (max-width: 800px) {
    article {
      flex-direction: column;
      text-align: center;
      gap: var(--space-l);
      background-position: center;
      div:nth-child(2) {
        flex-direction: column;
        form {
          width: 100%;
          input {
            width: 100%;
          }
        }
        a {
          &::after {
            display: none;
          }
        }
      }
    }
   }
</style>
