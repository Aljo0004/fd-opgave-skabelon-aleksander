---
import Layout from "@layouts/Layout.astro";
import Header from "@layouts/Header.astro";
import CaseStudyArticle from "@components/CaseStudyArticle.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
import CaseHero from "@components/CaseHero.astro";
import Footer from "@layouts/Footer.astro";
import Subscribe from "@components/Subscribe.astro";
---

<Layout />
<Header />
<HeroBgWrapper imagePath="casestudybanner.png">
  <CaseHero p="Case Studies" h1="Taxes & Efficiency" />
</HeroBgWrapper>

<CaseStudyArticle />
<Subscribe />
<Footer />
<style>
  header {
    display: inline-flex;
    padding: var(--space-xl) var(--space-xl);
    flex-direction: column;
    align-items: flex-start;
    border-radius: var(--space-m);
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(5.5px);

    h1 {
      font-size: var(--step-0);
      font-weight: 700;
    }

    p {
      font-size: var(--step--5);
      text-transform: uppercase;
      border-radius: 1.25rem;
      background: #ffcc4a;

      padding: 0 0.9375rem;
    }
  }
  @media (max-width: 800px) {
    header {
      align-items: center;
      text-align: center;
      padding: var(--space-l) 0.5rem;
    }
    
  }
</style>
